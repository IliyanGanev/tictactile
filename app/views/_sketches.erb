<div class="section" id="sketches">
<div id="box5" style="margin-top: -0.5em;">
	<div class="wrapper">
		<h2 style="font-size: 20px; padding-top: 4em; padding-bottom: 3em; font-family: myFirstFont;">sketches</h2>

		<% @sketches.each.with_index do |project, index| %>	
		<div class='icon'>
			<img style="width:10em; cursor:pointer" src=<%=project[:thumbnail]%>
			onclick="history.pushState(null, null, window.location.href + '?sketchmod<%=index%>al'); document.getElementById('sketchmod<%=index%>al').style.display='inline';"  class="w3-hover-opacity">
		</div><div id="sketchmod<%=index%>al" class="w3-modal" onclick="this.style.display='none'; var url = window.location.href; if (url.includes('?')) {var newurl = url.slice(0, url.indexOf('?')); history.pushState(null, null, newurl)};">
			<span class="w3-button w3-hover-red w3-xlarge w3-display-topright">&times;</span>
			<div style="background:rgba(0, 0, 0, 0.0);" class="w3-modal-content w3-animate-zoom">
				<img id="img01" src=<%=project[:image]%>>
				<p style="font-family: myFirstFont; color: grey; background:rgba(0, 0, 0, 0.0); margin-top: 0px; font-size: 13px;"><mark class="mark"><%=project[:title]%></mark></p>
			</div>
		</div>
		<%end%>

	</div>
</div>
</div>





